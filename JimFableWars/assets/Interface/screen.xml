<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="start">
        <layer id="background" backgroundColor="#000f" childLayout="horizontal">
            <image filename="Textures/menu_back.jpg"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="horizontal">
            <panel id="panel_left" height="100%" width="30%" align="center" childLayout="center"
             backgroundColor="#0000">  
            </panel>
            <panel id="panel_middle" height="100%" width="40%" align="center" childLayout="vertical"
             backgroundColor="#0000">
                <panel id="Header" height="60%" width="100%" align="center" childLayout="center"
             backgroundColor="#0002">
                    <image filename="Textures/menu_header.png"></image>
                </panel>
                <panel id="button_start" backgroundColor="#0006" width="100%" height="10%" childLayout="center">
                    <image filename="Textures/menu_start.png"></image>
                </panel>
                <panel id="button_end" backgroundColor="#0002" width="100%" height="10%" childLayout="center">
                    <image filename="Textures/menu_exit.png"></image>
                </panel>
                <panel id="Header" height="20%" width="100%" align="center" childLayout="vertical"
             backgroundColor="#0002">
                </panel>
            </panel>
            <panel id="panel_right" height="100%" width="30%" align="center" childLayout="center"
             backgroundColor="#0000">  
            </panel>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="hud_layer_top" childLayout="horizontal">
            <panel id="player_health" childLayout="horizontal" height="50px" valign="top">
                <image id="bh_01" filename="Interface/boss_heart.png"></image>
                <image id="bh_02" filename="Interface/boss_heart.png"></image>
                <image id="bh_03" filename="Interface/boss_heart.png"></image>
                <image id="bh_04" filename="Interface/boss_heart.png"></image>
                <image id="bh_05" filename="Interface/boss_heart.png"></image>
                <image id="bh_06" filename="Interface/boss_heart.png"></image>
                <image id="bh_07" filename="Interface/boss_heart.png"></image>
                <image id="bh_08" filename="Interface/boss_heart.png"></image>
                <image id="bh_09" filename="Interface/boss_heart.png"></image>
                <image id="bh_10" filename="Interface/boss_heart.png"></image>
                <image id="bh_11" filename="Interface/boss_heart.png"></image>
                <image id="bh_12" filename="Interface/boss_heart.png"></image>
                <image id="bh_13" filename="Interface/boss_heart.png"></image>
                <image id="bh_14" filename="Interface/boss_heart.png"></image>
                <image id="bh_15" filename="Interface/boss_heart.png"></image>
                <image id="bh_16" filename="Interface/boss_heart.png"></image>
                <image id="bh_17" filename="Interface/boss_heart.png"></image>
                <image id="bh_18" filename="Interface/boss_heart.png"></image>
                <image id="bh_19" filename="Interface/boss_heart.png"></image>
                <image id="bh_20" filename="Interface/boss_heart.png"></image>
            </panel>
        </layer>
        
        <layer id="hud_layer_bottom" childLayout="horizontal">
            <panel id="player_health" childLayout="horizontal" height="50px" valign="bottom">
                <image id="ph_01" filename="Interface/player_heart.png"></image>
                <image id="ph_02" filename="Interface/player_heart.png"></image>
                <image id="ph_03" filename="Interface/player_heart.png"></image>
                <image id="ph_04" filename="Interface/player_heart.png"></image>
            </panel>
        </layer>
    </screen>
</nifty>